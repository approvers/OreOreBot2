{
  "plugins": ["prettier-plugin-astro", "@trivago/prettier-plugin-sort-imports"],
  "singleQuote": true,
  "semi": true,
  "trailingComma": "none",
  "importOrder": ["^[./]"],
  "importOrderParserPlugins": ["importAssertions", "typescript", "jsx"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
