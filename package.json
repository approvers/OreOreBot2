{
  "name": "oreorebot2",
  "version": "1.5.0",
  "exports": "./index.js",
  "type": "module",
  "license": "MIT",
  "repository": "https://github.com/approvers/OreOreBot2",
  "author": "merunno <merunno92@gmail.com>",
  "scripts": {
    "start": "node ./build/index.js",
    "setup": "pm2 start ./build/server/index.js --name OreOreBot2",
    "debug": "ts-node --esm ./src/server/index.ts",
    "build": "esbuild ./src/server/index.ts --bundle --platform=node  --target=node16 --format=esm --external:./node_modules/* --outfile=build/index.js",
    "format": "prettier --write \"src/**/*.{js,ts,md}\"",
    "check": "prettier --check \"src/**/*.{js,ts,md}\" && tsc -p . --noEmit",
    "eslint": "eslint \"src/**/*.{js,ts,md}\"",
    "eslint:fix": "eslint \"src/**/*.{js,ts,md}\" --fix",
    "fix": "yarn run format && yarn run eslint:fix",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "engines": {
    "node": ">=14.16",
    "yarn": "1.x"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/opus": "^0.7.0",
    "@discordjs/rest": "^0.5.0",
    "@discordjs/voice": "^0.10.0",
    "cli-argparse": "^1.1.2",
    "date-fns": "^2.28.0",
    "difflib-ts": "^1.0.3",
    "discord.js": "^13.5.0",
    "dotenv": "^16.0.1",
    "ffmpeg-static": "^5.0.0",
    "husky": "^8.0.1",
    "nanoid": "^4.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.28.0",
    "c8": "^7.11.3",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-markdown": "^2.2.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "vitest": "^0.14.2"
  }
}
