{
  "name": "@oreorebot2/common",
  "private": true,
  "packageManager": "yarn@3.6.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @oreorebot2/bot start",
    "build:bot": "yarn workspace @oreorebot2/bot build",
    "build:docs": "yarn workspace @oreorebot2/docs build",
    "dev:bot": "yarn workspace @oreorebot2/bot dev",
    "dev:docs": "yarn workspace @oreorebot2/docs dev",
    "lint:bot": "yarn workspace @oreorebot2/bot lint",
    "lint:docs": "yarn workspace @oreorebot2/docs lint",
    "format:bot": "yarn workspace @oreorebot2/bot format",
    "format:docs": "yarn workspace @oreorebot2/docs format",
    "test": "yarn workspace @oreorebot2/bot test",
    "coverage": "yarn workspace @oreorebot2/bot coverage",
    "lint-staged": "lint-staged",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "8.50.0",
    "eslint-config-next": "13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.2",
    "lint-staged": "^14.0.0",
