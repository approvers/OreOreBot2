{
  "name": "@oreorebot2/common",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "start": "pnpm --filter @oreorebot2/bot start",
    "build:bot": "pnpm --filter @oreorebot2/bot build",
    "build:docs": "pnpm --filter @oreorebot2/docs build",
    "dev:bot": "pnpm --filter @oreorebot2/bot dev",
    "dev:docs": "pnpm --filter @oreorebot2/docs dev",
    "lint:bot": "pnpm --filter @oreorebot2/bot lint",
    "lint:docs": "pnpm --filter @oreorebot2/docs lint",
    "format:bot": "pnpm --filter @oreorebot2/bot format",
    "format:docs": "pnpm --filter @oreorebot2/docs format",
    "test": "pnpm --filter @oreorebot2/bot test",
    "coverage": "pnpm --filter @oreorebot2/bot coverage",
    "lint-staged": "lint-staged",
    "postinstall": "husky"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-mdx": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "5.3.3"
  }
}
