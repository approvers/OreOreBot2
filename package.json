{
  "name": "oreorebot2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/approvers/OreOreBot2",
  "author": "merunno <merunno92@gmail.com>",
  "scripts": {
    "start": "node ./build/server/index.js",
    "debug": "ts-node ./src/server/index.ts",
    "compile": "tsc -p .",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "check": "prettier --check \"src/**/*.{js,ts}\"",
    "eslint": "eslint --ignore-path .gitignore \"src/**/*.{js,ts}\"",
    "eslint:fix": "eslint --ignore-path .gitignore \"src/**/*.{js,ts}\" --fix",
    "fix": "yarn run format && npm run lint -- --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/opus": "^0.7.0",
    "@discordjs/rest": "^0.2.0-canary.0",
    "@discordjs/voice": "^0.8.0",
    "date-fns": "^2.28.0",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.5.0",
    "dotenv": "^10.0.0",
    "husky": "^7.0.4",
    "jsdiff": "^1.1.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/diff": "^5.0.2",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
