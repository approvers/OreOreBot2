{
  "name": "oreorebot2",
  "version": "1.3.0",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/approvers/OreOreBot2",
  "author": "merunno <merunno92@gmail.com>",
  "scripts": {
    "start": "node ./build/server/index.js",
    "setup": "pm2 start ./build/server/index.js --name OreOreBot2",
    "debug": "ts-node ./src/server/index.ts",
    "compile": "tsc -p .",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "check": "prettier --check \"src/**/*.{js,ts}\"",
    "eslint": "eslint --ignore-path .gitignore \"src/**/*.{js,ts}\"",
    "eslint:fix": "eslint --ignore-path .gitignore \"src/**/*.{js,ts}\" --fix",
    "fix": "yarn run format && npm run lint -- --fix",
    "test": "jest",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/opus": "^0.7.0",
    "@discordjs/rest": "^0.3.0",
    "@discordjs/voice": "^0.8.0",
    "date-fns": "^2.28.0",
    "difflib-ts": "^1.0.3",
    "discord-api-types": "^0.29.0",
    "discord.js": "^13.5.0",
    "dotenv": "^16.0.0",
    "husky": "^7.0.4",
    "nanoid": "^3.3.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.6",
    "pm2": "^5.2.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
