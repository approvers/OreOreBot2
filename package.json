{
  "name": "oreorebot2",
  "version": "1.5.0",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/approvers/OreOreBot2",
  "author": "merunno <merunno92@gmail.com>",
  "scripts": {
    "start": "node ./build/server/index.js",
    "setup": "pm2 start ./build/server/index.js --name OreOreBot2",
    "debug": "ts-node ./src/server/index.ts",
    "build": "tsc -p .",
    "format": "prettier --write \"**/*.{js,ts,md}\"",
    "check": "prettier --check \"**/*.{js,ts,md}\"",
    "eslint": "eslint --ignore-path .gitignore \"**/*.{js,ts,md}\"",
    "eslint:fix": "eslint --ignore-path .gitignore \"**/*.{js,ts,md}\" --fix",
    "fix": "yarn run format && yarn run eslint:fix",
    "test": "jest",
    "coverage": "jest --coverage --coverageDirectory='coverage'",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "engines": {
    "yarn": "1.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/opus": "^0.7.0",
    "@discordjs/rest": "^0.4.1",
    "@discordjs/voice": "^0.8.0",
    "cli-argparse": "^1.1.2",
    "date-fns": "^2.28.0",
    "difflib-ts": "^1.0.3",
    "discord-api-types": "^0.33.0",
    "discord.js": "^13.5.0",
    "dotenv": "^16.0.1",
    "ffmpeg-static": "^5.0.0",
    "husky": "^8.0.1",
    "nanoid": "^3.3.4",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-markdown": "^2.2.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.2",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
